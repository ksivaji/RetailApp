<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_for_badging"
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_badging_container_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/drawer_list_icon_width"
            android:layout_height="@dimen/drawer_list_icon_height"
            android:paddingLeft="@dimen/drawer_list_item_left_padding"
            android:src="@drawable/empty_drawable" />

        <TextView
            android:id="@+id/list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/drawer_list_item_left_padding"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:textSize="@dimen/drawer_list_item_text_size" />

    </LinearLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_border" />-->

</LinearLayout>