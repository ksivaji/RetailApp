<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/import_leads"
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Import Leads" />

            <ImageView
                android:id="@+id/load_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@android:drawable/ic_menu_send" />
        </RelativeLayout>

        <View style="@style/HorizontalDivider" />

        <TextView
            android:id="@+id/lead_info"
            style="@style/TextView"
            android:layout_width="match_parent"
            android:background="#ffd0d0d0"
            android:text="Enter Lead Information" />

        <View style="@style/HorizontalDivider" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lead_name"
                style="@style/TextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Lead Name" />

            <EditText
                android:id="@+id/lead_name_editText"
                style="@style/CreateLeadEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customer_name"
                style="@style/TextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Customer Name" />

            <EditText
                android:id="@+id/customer_name_editText"
                style="@style/CreateLeadEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Product_service_Name"
                style="@style/TextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Product Service Name" />

            <EditText
                android:id="@+id/Product_service_Name_editText"
                style="@style/CreateLeadEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/opportunity_size"
                style="@style/TextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Opportunity size" />

            <EditText
                android:id="@+id/opportunity_size_editText"
                style="@style/CreateLeadEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <TextView
            style="@style/TextView"
            android:layout_width="match_parent"
            android:text="Address" />

        <View style="@style/HorizontalDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/expected_close_date"
                style="@style/TextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Expected close date" />

            <EditText
                android:id="@+id/expected_close_date_editText"
                style="@style/CreateLeadEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/probability_of_closure"
                style="@style/TextView"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Probability of closure" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Spinner
                    android:id="@+id/probability_of_closure_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edit_border"
                    android:clickable="true"
                    android:entries="@array/lead_type"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginRight="3dp"
                    android:src="@android:drawable/ic_menu_more" />
            </FrameLayout>
        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lead_type"
                style="@style/TextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Lead Type" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Spinner
                    android:id="@+id/lead_type_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edit_border"
                    android:clickable="true"
                    android:entries="@array/lead_type"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginRight="3dp"
                    android:src="@android:drawable/ic_menu_more" />
            </FrameLayout>
        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lead_status"
                style="@style/TextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Lead Status" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Spinner
                    android:id="@+id/lead_status_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edit_border"
                    android:clickable="true"
                    android:entries="@array/lead_type"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginRight="3dp"
                    android:src="@android:drawable/ic_menu_more" />
            </FrameLayout>
        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <TextView
            android:id="@+id/notes"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:text="Notes" />

        <View style="@style/HorizontalDivider" />

        <EditText
            style="@style/CreateLeadEditText"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <View style="@style/HorizontalDivider" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="#00FF00"
            android:gravity="center"
            android:padding="20dp"
            android:text="Create Lead" />
    </LinearLayout>
</ScrollView>